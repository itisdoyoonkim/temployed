<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Director of Transportation</h6>
    <p class="card-text"><%= @post.body %></p>
    <a href="#" class="card-link">Apply now</a>
    <a href="#" class="card-link">Bookmark for later</a>
    <hr />
    <p>Updated <%= time_ago_in_words(@post.updated_at) %> ago</p>
    <p><%= pluralize(@post.views, "View") %></p>
  </div>
</div>