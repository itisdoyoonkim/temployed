<div class="card">
  <div class="card-body">
    <div style="font-size: .9rem">
      <%= @categories.find(@post.category_id).name %>
    </div>

    <h5 class="card-title"><%= @post.job_title %></h5>
    <p class="card-subtitle mb-2 text-muted"><%= @post.company_name %> - <%= @post.location %></p>

    <small>Start date: <%= @post.start_date %></small>

    <p class="card-text"><%= @post.body %></p>

    <% if @post.apply_link.present? %>
      <%= link_to "Apply", "https://www.#{@post.apply_link}", class: "btn btn-primary btn-sm" %>
    <% else %>
      <%= mail_to @post.user.email, 'Apply', class: "btn btn-primary btn-sm" %>
    <% end %>
    
    <button class="btn btn-info btn-sm">Bookmark for later</button>

    <hr />
    <p>Updated <%= time_ago_in_words(@post.updated_at) %> ago</p>
  </div>
</div>