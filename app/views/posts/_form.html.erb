<% if @post.errors.any? %>
  <div>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: post, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :job_title, "Job title" %>
    <%= f.text_field :job_title, class: "form-control" %>
    <% if @post.errors[:job_title] %>
      <%= @post.errors[:job_title].join(",") %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, "Start date (optional)" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :company_name, "Company name (optional)" %>
    <%= f.text_field :company_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :job_description %>
    <%= f.rich_text_area :body %>
  </div>

  <%= f.submit "POST IT", class: "btn btn-primary btn-sm" %>
<% end %>
