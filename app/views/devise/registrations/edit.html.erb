<h2>Update my account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
html: { method: :put }) do |f| %> <%= render "devise/shared/error_messages",
resource: resource %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class: "form-control string" %>
</div>

<br />

<div class="field">
  <%= f.label :preferred_locations %><br />
  <%= f.text_field :preferred_locations, class: "form-control string" %>
</div>

<br />

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autocomplete: "email", class: "form-control string"
  %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<br />

<div class="field">
  <%= f.label :password %>
  <small>(leave blank if you don't want to change it)</small>
  <%= f.password_field :password, autocomplete: "new-password", class:
  "form-control string" %> <% if @minimum_password_length %>
  <small>Minimum of <%= @minimum_password_length %> characters.</small>
  <% end %>
</div>

<br />

<div class="field">
  <%= f.label :password_confirmation %>
  <small>(leave blank if you don't want to change it)</small>
  <%= f.password_field :password_confirmation, autocomplete: "new-password",
  class: "form-control string" %>
</div>

<br />

<div class="field">
  <%= f.label :current_password %>
  <small>(we need your current password to update your account)</small>

  <br />

  <%= f.password_field :current_password, autocomplete: "current-password",
  class: "form-control string" %>
</div>

<br />

<div class="actions">
  <%= f.submit "Update", class: "btn btn-info btn-sm" %>
</div>
<% end %> <%= link_to "Back", :back %>
