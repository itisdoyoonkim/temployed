<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Location</th>
      <th>From</th>
      <th>To</th>
      <th>Certificate</th>
      <th>Current</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.institution %></td>
        <td><%= education.location %></td>
        <td><%= education.from %></td>
        <td><%= education.to %></td>
        <td><%= education.certificate %></td>
        <td><%= education.current %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

