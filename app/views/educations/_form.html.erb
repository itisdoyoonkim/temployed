
<%= simple_form_for(@education) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :institution %>
    <%= f.input :location %>

    <%= f.label :from %>
    <%= f.date_field :from, class: "form-control string" %>

    <%= f.label :to %>
    <%= f.date_field :to, class: "form-control string" %>
    
    <%= f.input :certificate %>
    <%= f.input :current %>
  </div>

  <div class="form-actions">
    <%= f.submit "Add", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
